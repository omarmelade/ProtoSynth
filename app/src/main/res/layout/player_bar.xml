<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/play"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00FA0000"
            android:contentDescription="@string/play_desc"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_forward" />

        <ImageButton
            android:id="@+id/stop"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:contentDescription="@string/stop_desc"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_stop" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/fast_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:contentDescription="@string/fast_backward_desc"
            android:rotation="180"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_fast_forward" />

        <ImageButton
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:contentDescription="@string/backward_desc"
            android:rotation="180"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_forward" />

        <ImageButton
            android:id="@+id/record"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:contentDescription="@string/record_desc"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_record" />

        <ImageButton
            android:id="@+id/forw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:contentDescription="@string/forward_desc"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_forward" />

        <ImageButton
            android:id="@+id/fast_forw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:contentDescription="@string/fast_forward_desc"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_fast_forward" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>